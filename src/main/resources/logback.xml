<?xml version="1.0" encoding="UTF-8"?>

<configuration>

<!-- redirection des logs vers la sortir Console Standard -->

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>

<!-- redirection vers un fichier -->

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>C:\Users\mtremion\Documents\workspace-sts-3.8.4.RELEASE\slf4j-api\logs\app.log</file>
		<append>true</append>
		<immediateFlush>true</immediateFlush>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

<!-- politique de log pour les classes du package dev.console -->

	<logger name="dev.console" level="INFO">
		<appender-ref ref="STDOUT" />
	</logger>

<!-- regle de logs par defaut. Ici : niveau INFO vers la sortie standard -->

	<root level="DEBUG">
		<appender-ref ref="FILE" />
	</root>

</configuration>